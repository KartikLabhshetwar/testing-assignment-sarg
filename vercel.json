{
  "version": 2,
  "buildCommand": "pnpm run db:generate && pnpm run build",
  "installCommand": "pnpm install --no-frozen-lockfile",
  "outputDirectory": "apps/web/.next",
  "functions": {
    "apps/server/src/app/api/**/*.ts": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/apps/server/src/app/api/$1"
    }
  ]
}
